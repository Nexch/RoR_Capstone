  <div class="d-flex flex-wrap">
    <div class=" bg-dark  text-white p-2" style="width: 18rem;">
      <div class="d-flex align-items-center justify-content-around ">
      <img src="https://static.comicvine.com/uploads/original/11111/111113706/5508193-7637959662-40788.jpg" class="card-img-top rounded-circle " alt="..." style="width: 5rem; height: 5rem;">
      <h5 class="card-title"><%= current_user.name%></h5>
      </div>
      <div class=" d-flex align-items-baseline justify-content-around">
        <div class="card-body">
          <p> Follows <p>
          <p class="card-text text-white"><%= current_user.follows.count%></p>
        </div>
        <div class="mr-5">
          <p> Follower<p>
          <p> <% lol = Follow.all%>
              <% count = 0 %>
              <% lol.each do |meme|%>
                <% if meme.friend_id == current_user.id%>
                  <% count += 1%>
                <% end %>
              <% end %>
              <%= count %>
          </p>
        </div>
      </div>
        <div class="">
            <ul class="list-group list-group-flush">
              <li class="list-group-item bg-dark"><%= link_to 'New Tweet', new_tweet_path %></li>
              <li class="list-group-item bg-dark"><%= link_to 'User page', user_path(current_user) %></li>
              <li class="list-group-item bg-dark"><%= link_to "logout", destroy_user_session_path, method: :delete  %></li>
              <li class="list-group-item bg-dark"><%= link_to "delete", user_registration_path, method: :delete, data: { confirm: "You sure?" } %></li>

            </ul>

        </div>
    </div>


    <div class="d-flex flex-column flex-fill">
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary m-0">
        <a class="navbar-brand" href="/"><img src="https://i.pinimg.com/736x/0a/c8/e8/0ac8e8ab266076f9d654e8387ba5a993.jpg" class="rounded-circle " alt="..." style="width: 2.5rem; height: 2.5rem;">
 </a>
      </nav>
  <div class="d-flex justify-content-between bg-secondary">
    <div class="d-flex flex-column w-100  bg-light">
    <div class="d-md-none d-xl-block d-lg-none">
      <img src="https://news-cdn.softpedia.com/images/news2/did-you-know-the-windows-xp-wallpaper-was-so-expensive-fedex-refused-to-ship-it-520483-2.jpg" class="" alt="..." style="height: 20rem; min-width:100%;">
    </div>
  <div  class="" style="width: 20rem; word-wrap: break-word; ">
<p id="notice"><%= notice %></p>

<h1 class="ml-5" >Tweets</h1>

<table class="text-wrap ml-5 mr-5"style="width: 35rem; word-wrap: break-word; ">
  <thead>

    <style>
      table {
        border-collapse: collapse;
        table-layout: fixed;
        width: 310px;
      }
      table td {
        border-bottom: solid 1px #666;
        width: 20rem;
        word-wrap: break-word;
      }
    </style>

    <tr>
      <th class="">Tweet</th>
      <th> User </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.user.name %></td>
        <td class="flex-wrap" style="width: 20rem; "><%= tweet.tweet %></td>
        <td><%= link_to 'Show', tweet %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

</div>
    <div class="border-left border-dark p-5 bg-dark text-white" style="width: 18rem;">
        <h5>Who to follow</h5>
          <% list = Array.new%>
          <% lol = current_user.follows%>
          <% lol.each do |lols| %>
            <% list.push(lols.friend_id) %>
          <% end %>
          <% @user.each do |tweet| %>
            <% if list.exclude?(tweet.id)%>
              <tr>
                <td><%= tweet.name %></td>
                <td><%= link_to 'Show', tweet %></td><br>
              </tr>
            <% end %>
          <% end %>

    </div>
  </div>
</div>
</div>



